FROM ubuntu:20.04

RUN apt-get update \
  && apt-get install --yes --no-install-recommends \
  curl \
  build-essential \
  git \
  python3.9 \
  python3.9-venv \
  python3.9-dev \
  python3-distutils \
  python3-pip \
  unzip

RUN pip3 install --upgrade \
  pip

COPY . /root/arcor2/

RUN cd ~/arcor2 \
	&& ./pants --version
